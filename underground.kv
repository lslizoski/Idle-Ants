FloatLayouts:

<FloatLayouts>:
    orientation: "vertical"


    #Button to go to surface
    Button:
        text: "^\n^"
        size_hint: .25, .05
        pos_hint: {'center_x': 0.5, 'center_y': 0.95}


    # Button to go to food room
    Button:
        text: "<--"
        size_hint: .20, .10
        pos_hint: {'left': 1, 'y': 0.55}


    # Button to go to Queen
    Button:
        text: "<--"
        size_hint: .30, .10
        pos_hint: {'left': 1, 'y': 0.07}


    # Button to go to lab
    Button:
        text: "-->"
        size_hint: .20, .10
        pos_hint: {'right': 1, 'y': 0.07}


    Image:
        source: "images/anthill_tunnels.png"
        allow_stretch: True
        keep_ratio: False
        fit_mode: "contain"
