WindowManager:
    Home:
    Menu:
    Incubator:
    Queen:
    Storage:

<Home>:
    name: "Home"

	FloatLayout:

        orientation: "vertical"

        Button:
            text: "You should not see this"
            size_hint: .45, 0.30
            pos_hint: {'center_x': 0.5, 'y': 0.15}

        Image:
            source: "images/anthill_surface.png"
            allow_stretch: True
            keep_ratio: False
            fit_mode: "contain"

        Label:
            id: ant_count
            text: '1'
            size_hint: .34, 1
            pos_hint: {'x':0, 'top': 1.45}

        Label:
            id: food_count
            text: "2"
            size_hint: .34, 1
            pos_hint: {'x':.33, 'top': 1.45}

        Label:
            id: egg_count
            text: "3"
            size_hint: .33, 1
            pos_hint: {'right':1, 'top': 1.45}

        Button:
            text: "v\nv"
            size_hint: .25, .05
            pos_hint: {'center_x': 0.5}
            on_release:
                root.updateCounters()
				root.manager.transition.direction = 'up'
				root.manager.transition.duration = 1
				root.manager.current = 'Menu'

<Menu>:
    name: "Menu"

	FloatLayout:

        orientation: "vertical"

        Image:
            source: "images/anthill_tunnels.png"
            allow_stretch: True
            keep_ratio: False
            fit_mode: "contain"


        # Button to go to food room
        Button:
            text: "<--"
            size_hint: .20, .10
            pos_hint: {'left': 1, 'y': 0.55}
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.transition.duration = 1
                root.manager.current = 'Storage'


        # Button to go to Queen
        Button:
            text: "<--"
            size_hint: .30, .10
            pos_hint: {'left': 1, 'y': 0.07}
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.transition.duration = 1
                root.manager.current = 'Queen'


        # Button to go to incubator
        Button:
            text: "-->"
            size_hint: .20, .10
            pos_hint: {'right': 1, 'y': 0.07}
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 1
                root.manager.current = 'Incubator'


        #Button to go to surface
        Button:
            text: "^\n^"
            size_hint: .25, .05
            pos_hint: {'center_x': 0.5, 'center_y': 0.95}
            on_release:
                root.manager.transition.direction = 'down'
                root.manager.transition.duration = 1
                root.manager.current = 'Home'

